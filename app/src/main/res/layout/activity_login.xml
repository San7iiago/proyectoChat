<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chatPasto.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="217dp"
            android:layout_height="205dp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:adjustViewBounds="true"
            android:background="@drawable/login"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp"
            android:gravity="center"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/eTusuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:textColorHint="#2d3436"
            android:textColor="#2d3436"
            android:maxLines="1"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_mood_black_24dp" />

        <EditText
            android:id="@+id/eTcontraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:textColorHint="#2d3436"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:textColor="#2d3436"
            android:inputType="textPassword"
            />
        <RadioButton
            android:id="@+id/RBSecion"
            android:hint="No cerrar sesión"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bTingresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:layout_marginTop="6dp"
            android:textSize="24sp"
            android:background="@color/colorBtnSignIn"/>

        <Button
            android:id="@+id/registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginTop="6dp"
            android:textSize="24sp"
            android:background="@color/colorBtnSignUp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp">

            <ImageButton
                android:id="@+id/buttonFacebook"
                android:background="@null"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginRight="16dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_facebook" />

            <ImageButton
                android:id="@+id/buttonTwitter"
                android:background="@null"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_twitter" />

            <ImageButton
                android:id="@+id/buttonInstagram"
                android:background="@null"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_instagram" />

            <ImageButton
                android:id="@+id/buttonGoogle"
                android:background="@null"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="16dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_google" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
